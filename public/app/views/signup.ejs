<!DOCTYPE html>
<html lang="ru">
<%- include(headPartial) %>

    <body>
        <!-- Вставляем SVG спрайты -->
        <div style="display: none;">
            <%- svgSprite %>
        </div>

        <div class="responsive-wrapper">
            <div class="auth">

                <!-- Левая часть -->
                <aside class="auth-info">

                    <header class="item auth-item-info head-auth-info">
                        <a href="/" class="logo-auth-info">
                            <img src="/icons/favicon.ico" alt="TanukiCode logo">
                        </a>

                        <div class="head-auth-action">
                            <button class="item theme-l-i" aria-label="Toggle theme"></button>
                            <button class="item ds-lang lang-l-i" aria-label="Select language"></button>
                        </div>

                        <nav class="modal-header lang-curr-modal">
                            <div class="modal-main-content">
                                <div class="lang-data">
                                    <a href="/" class="item active">
                                        <div class="icon-lang">
                                            <img src="/imgs/flags/lang/en.svg" alt="English">
                                        </div>
                                        <p>English</p>
                                    </a>
                                </div>
                                <div class="currency-data">
                                    <a href="#" class="item active">USD</a>
                                </div>
                            </div>
                        </nav>
                    </header>

                    <section class="body-auth-info">
                        <h1>Create your free TanukiCode account</h1>
                        <p>Join the crypto revolution</p>
                    </section>

                    <footer class="item">
                        <div class="footer-head-info">
                            <figure class="footer-image">
                                <img src="source/img/footer-image.png" alt="Promo illustration">
                            </figure>
                            <h2>Sign up now and get down your trading fees to Zero!</h2>
                        </div>

                        <section class="footer-time-info">
                            <h2>Event end time</h2>
                            <div class="time-info">
                                <div class="item">
                                    <p>d</p>
                                    <h3 class="e-m-days">12</h3>
                                </div>
                                <div class="item">
                                    <p>h</p>
                                    <h3 class="e-m-hours">5</h3>
                                </div>
                                <div class="item">
                                    <p>m</p>
                                    <h3 class="e-m-minutes">45</h3>
                                </div>
                                <div class="item">
                                    <p>s</p>
                                    <h3 class="e-m-seconds">29</h3>
                                </div>
                            </div>
                        </section>
                    </footer>
                </aside>

                <!-- Правая часть — регистрация -->
                <main class="auth-main">
                    <section class="auth-content">
                        <header class="head-auth-content">
                            <h1>Sign up to <span>TanukiCode</span></h1>
                        </header>

                        <form class="auth-fill" method="POST" action="/signup">
                            <div class="item">
                                <label for="username">Username</label>
                                <div class="fill-item-auth">
                                    <input type="text" class="default-input" id="username" name="username" required>
                                </div>
                            </div>

                            <div class="item">
                                <label for="email">Email</label>
                                <div class="fill-item-auth">
                                    <input type="email" class="default-input" id="email" name="email" required>
                                </div>
                            </div>

                            <div class="item">
                                <label for="password">Password</label>
                                <div class="fill-item-auth">
                                    <input type="password" class="default-input" id="password" name="password" required>
                                </div>
                            </div>

                            <div class="item">
                                <label for="re_password">Confirm Password</label>
                                <div class="fill-item-auth">
                                    <input type="password" class="default-input" id="re_password"
                                        name="confirm_password" required>
                                </div>
                            </div>

                            <input type="hidden" id="ref_id" name="ref_id" value="">
                            <input type="hidden" id="get_promo" name="get_promo" value="">

                            <section class="auth-action">
                                <div class="auth-info-top">
                                    <label class="default-check">
                                        <input id="reg_checkbox" type="checkbox" name="agree" required>
                                        <span class="check">
                                            <p>
                                                By signing up I agree that I am 18 years of age or older, to the
                                                <a href="terms">Terms of service</a>.
                                            </p>
                                        </span>
                                    </label>
                                </div>

                                <button type="submit" class="default-button button-b" id="create_account">
                                    <span>Sign up</span>
                                </button>

                                <div class="message-auth">
                                    <p>Do you already have an account? <a href="signin">Sign in</a></p>
                                </div>
                            </section>
                        </form>
                    </section>
                </main>
            </div>
        </div>

        <!-- Модальные окна -->
        <% if (modalWrappers) { %>
            <%- include(modalWrappers) %>
        <% } %>
    </body>

</html>