<form class="auth-fill" method="POST" action="/signup">
    <ul class="form-list-default">
        <li>
            <div class="form-item-default">
                <label for="username">Username</label>
                <input type="email" id="username" name="username" required>
            </div>
        </li>

        <li>
            <div class="form-item-default">
                <label for="login_email">Email</label>
                <input type="email" id="login_email" name="email" required>
            </div>
        </li>

        <li>
            <div class="form-item-default">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
        </li>

        <li>
            <div class="form-item-default">
                <label for="re_password">Confirm Password</label>
                <input type="password" id="re_password" name="password" required>
            </div>
        </li>

        <li>
            <label class="form-item-check">
                <input id="reg_checkbox" type="checkbox" name="agree">
                <div class="check">
                    <span>
                        By signing up I agree that I am 18 years of age or older, to the
                        <a href="terms">Terms of service</a>.
                    </span>
                </div>
            </label>
        </li>
    </ul>

    <div class="actions">
        <button type="submit" class="default-button button-accent" id="update_username">
            <span>Sign up</span>
        </button>
    </div>

    <div class="message-auth">
        <p>Do you already have an account? <a href="signin">Sign in</a></p>
    </div>
</form>