<!DOCTYPE html>
<html lang="ru">
<%- include(headPartial) %>

    <body>
        <!-- Вставляем SVG спрайты -->
        <div style="display:none;">
            <%- svgSprite %>
        </div>
        <!-- Конец SVG спрайтов -->
        <div class="container">
            <%- include(navMain) %>
            <main>
                <div class="content-container">
                    <%- include(header) %>
                    <% blocks.forEach(function(block) { %>
                    <%- include(block) %>
                    <% }); %>

                    <%- include(footer) %>
                </div>
            </main>
        </div>

        <!-- Модальные окна -->
        <%- include(modalWrappers) %>
        <!-- Конец модальных окон -->

        <!-- Подключение JS-файлов -->
        <% (typeof bodyScripts !== 'undefined' ? bodyScripts : []).forEach(function(src) { %>
            <script src="<%= src %>"></script>
        <% }); %>
    </body>
</html>