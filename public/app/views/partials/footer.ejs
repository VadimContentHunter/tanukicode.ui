<footer>
    <nav class="footer-navigation" aria-label="Footer navigation">
        <ul class="footer-nav-list">
            <% footerNavSections.forEach(section=> { %>
                <li>
                    <h2> <%= section.title %></h2>
                    <ul class="footer-nav-items">
                        <% section.links.forEach(link=> { %>
                            <li>
                                <a href="<%= link.href %>" class=""
                                    <% if (link.target) { %> 
                                        target="<%= link.target %>"
                                    <% } %>
                                ><%= link.label %></a>
                            </li>
                        <% }) %>
                    </ul>
                </li>
            <% }) %>
        </ul>
    </nav>



    <section class="footer-information">
        <div class="information-table">
            <h2>Submit for updates.</h2>
            <p>Subscribe to get update and notify our <br> exchange and products</p>
            <form>
                <input type="email" placeholder="Enter your email address" wire:model="email">
                <button type="button" class="default-button button-accent">
                    <p>Submit</p>
                </button>
            </form>
        </div>

        <div class="message-footer">
            <p>TanukiCode 2024 Â© All right reserved</p>
        </div>
    </section>
</footer>