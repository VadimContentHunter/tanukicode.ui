<form class="auth-fill" method="POST" action="/login">
    <ul class="form-list-default">
        <li>
            <div class="form-item-default">
                <label for="login_email">Email</label>
                <input type="email" class="default-input" id="login_email" name="email" required>
            </div>
        </li>

        <li>
            <div class="form-item-default">
                <label for="login_password">Password</label>
                <input type="password" class="default-input" id="login_password" name="password" required>
            </div>
        </li>

        <li>
            <label class="form-item-check">
                <input id="reg_checkbox" type="checkbox" name="agree">
                <div class="check">
                    <span>
                        By signing in I agree that I am 18 years of age or older, to the
                        <a href="terms">Terms of service</a>.
                    </span>
                </div>
            </label>
        </li>
    </ul>

    <div class="actions">
        <button type="submit" class="default-button button-accent" id="update_username">
            <span>Sign in</span>
        </button>
    </div>

    <div class="message-auth">
        <p>Do you already have an account? <a href="signup">Sign up</a></p>
    </div>
</form>