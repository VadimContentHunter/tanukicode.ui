<!DOCTYPE html>
<html lang="ru">
<%- include(headPartial) %>

    <body>
        <!-- Вставляем SVG спрайты -->
        <div style="display: none;">
            <%- svgSprite %>
        </div>
        <!-- Конец SVG спрайтов -->

        <div class="responsive-wrapper">
            <div class="auth">

                <!-- Левая часть: информация -->
                <aside class="auth-info">

                    <header class="head-auth-info">
                        <a href="/" class="logo-auth-info">
                            <img src="/icons/favicon.ico" alt="TanukiCode logo">
                        </a>

                        <div class="head-auth-action">
                            <div class="icon icon-sun-white"></div>
                            <div class="icon icon-lang-white"></div>
                        </div>

                        <%- include(modalLang) %>
                    </header>

                    <section class="body-auth-info">
                        <h2>We make it easy to buy and sell cryptocurrency</h2>
                        <p>Crypto Asset Exchange</p>
                    </section>

                    <footer class="footer-auth-info">
                        <div class="footer-head-info">
                            <figure class="footer-image">
                                <img src="/imgs/footer-image.png" alt="Promotional Illustration">
                            </figure>
                            <h2><%- mainText %></h2>
                        </div>

                        <section class="footer-time-info">
                            <h2>Event end time</h2>
                            <ul class="time-info">
                                <li>
                                    <p>d</p>
                                    <h3 class="e-m-days">12</h3>
                                </li>
                                <li>
                                    <p>h</p>
                                    <h3 class="e-m-hours">5</h3>
                                </li>
                                <li>
                                    <p>m</p>
                                    <h3 class="e-m-minutes">45</h3>
                                </li>
                                <li>
                                    <p>s</p>
                                    <h3 class="e-m-seconds">29</h3>
                                </li>
                            </ul>
                        </section>
                    </footer>
                </aside>

                <!-- Правая часть: форма входа -->
                <main class="auth-main">
                    <section class="auth-content">
                        <header class="head-auth-content">
                            <h1><%- titleForm %></h1>
                        </header>

                        <%- include(blockForm) %>
                    </section>
                </main>
            </div>
        </div>

        <!-- Подключение JS-файлов -->
        <% (typeof bodyScripts !== 'undefined' ? headScripts : []).forEach(function(src) { %>
            <script src="<%= src %>"></script>
        <% }); %>

    </body>

</html>